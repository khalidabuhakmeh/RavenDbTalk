@model RavenDbTalk.Web.Models.Domain.Quote

<div class="col-lg-12">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <a href="@Url.Action("index", "quotes", new { by = Model.By })" class="label label-success">@Model.By</a>
            <a href="@Url.Action("index", "quotes", new { category = Model.Category })" class="label label-info">@Model.Category</a>
        </div>
        <div class="panel-body">
            <blockquote>
                <p>@Model.Text</p>
                <cite>- @Model.By</cite>
            </blockquote>
            <a class="btn btn-info pull-right" href="@Url.Action("show", "quotes", new { id = Model.Id })">
                More...
            </a>
        </div>
    </div>
</div>